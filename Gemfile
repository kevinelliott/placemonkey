source 'http://rubygems.org'

gem 'rails', '3.1.0'
gem 'json'
gem 'fog'
gem 'carrierwave'
gem 'rmagick', :require => 'RMagick'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

group :production do
  gem 'pg'
end

group :development do
  gem 'sqlite3'
end

