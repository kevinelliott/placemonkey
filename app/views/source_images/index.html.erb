<h1>Source Images</h1>

<table>
  <tr>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @source_images.each do |source_image| %>
  <tr>
    <td><%= image_tag(source_image.image, :width => 150) %></td>
    <td><%= link_to 'Show', source_image %></td>
    <td><%= link_to 'Edit', edit_source_image_path(source_image) %></td>
    <td><%= link_to 'Destroy', source_image, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

